%%%%%%%%% TO USE

% primary color
\testmatchingchar{\primaryColorToUse}{0}{*}
\ifmatchingchar \def\primaryColorToUse{blakish} \fi

% secondary color
\testmatchingchar{\secondaryColorToUse}{0}{*}
\ifmatchingchar \def\secondaryColorToUse{grey} \fi

% objective text color
\testmatchingchar{\objTextColorToUse}{0}{*}
\ifmatchingchar \def\objTextColorToUse{grey} \fi

% primary objective box color
\testmatchingchar{\primaryHTMLColorToUse}{0}{*}
