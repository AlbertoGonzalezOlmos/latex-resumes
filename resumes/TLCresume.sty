% SECTION FORMATTING
% this is where the uggo horizontal rules were
\RequirePackage[nostruts]{titlesec}
\titlespacing*{\section}{0em}{0.3em}{0em}
\titleformat{\section}{\scshape \raggedright \large}{}{0em}{}[\vspace{0em}]
% SUBSECTION FORMATTING
\titlespacing*{\subsection}{0em}{0em}{0em} % gets rid of space before/after lines
\titleformat{\subsection}{\bfseries}{}{0em}{}[] % gets rid of section numbering

% BOLD COMMAND
\newcommand{\skills}[1]{ {\bfseries #1}}

% SUBTEXT
\newcommand{\subtext}[1]{\textit{#1}\par\vspace{0em}}

% tighter spacing than itemize
\setlist[itemize]{align=parleft,left=0pt..1em}
\newenvironment{zitemize}{
\begin{itemize} \itemsep 0pt \parskip 0pt \parsep 1pt}
{\end{itemize}\vspace{-.5em}}

